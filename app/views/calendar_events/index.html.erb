<div id="calendar"></div>
<h1>Calendar Events</h1>

<ul>
  <% @calendar_events.each do |event| %>
    <li>

      <%= link_to event.title, calendar_event_path(event) %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Event', new_calendar_event_path, class: 'btn btn-primary' %>
<%= link_to 'Back to Calendar', calendar_events_path, class: 'btn btn-secondary' %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    $('#calendar').fullCalendar({
      events: [
        // You can add your calendar events here
        // Format: { title: 'Event Title', start: '2023-11-15T10:00:00', end: '2023-11-15T12:00:00' }
        // Add events dynamically using Ruby in your controller
        <% @calendar_events.each do |event| %>
          {
            title: '<%= event.title %>',
            start: '<%= event.start_date %>',
            end: '<%= event.end_date %>'
          },
        <% end %>
      ],
      header: {
        left: 'prev,next today',
        center: 'title',
        right: 'month,agendaWeek,agendaDay'
      },
      defaultView: 'month'
    });
  });
</script>
